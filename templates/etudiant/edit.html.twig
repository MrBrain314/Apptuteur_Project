{% extends 'base.html.twig' %}

{% block title %}
    {{ etudiant is defined ? 'Modifier l’étudiant' : 'Ajouter un étudiant' }}
{% endblock %}

{% block body %}
<div class="d-flex justify-content-center mt-5">

    <div class="card shadow-lg border-0" style="width: 600px;">

        {# ———— HEADER COLORÉ ———— #}
        <div class="p-3 text-white" style="
            background: linear-gradient(90deg, #198754, #20c997);
            border-top-left-radius: .5rem; 
            border-top-right-radius: .5rem;
        ">
            <h3 class="m-0 fw-bold text-center">
                {{ etudiant is defined ? 'Modifier l’étudiant' : 'Ajouter un étudiant' }}
            </h3>
        </div>

        {# ———— CONTENU FORMULAIRE ———— #}
        <div class="card-body px-4 py-4">

            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'fw-semibold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prenom, null, {'label_attr': {'class': 'fw-semibold'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.formation, null, {'label_attr': {'class': 'fw-semibold'}}) }}
                {{ form_widget(form.formation, {'attr': {'class': 'form-control form-control-lg'}}) }}
            </div>

            <button class="btn w-100 text-white mt-3 py-2"
                style="background-color:#198754; font-size:1.1rem;">
                {{ etudiant is defined ? 'Enregistrer' : 'Ajouter' }}
            </button>

            {{ form_end(form) }}

            <div class="mt-3 text-center">
                <a href="{{ path('etudiants_list') }}" class="btn btn-outline-secondary px-4">
                    ⬅ Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
