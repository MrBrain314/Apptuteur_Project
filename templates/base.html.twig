<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Visites Tuteurs{% endblock %}</title>
    
    {# Stylesheets Bootstrap + custom #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endblock %}
</head>
<body>
    {# Navbar principale #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('dashboard') }}">Visites Tuteurs</a>

            <div class="d-flex">
                {% if app.session.get('tuteur_id') %}
                    <a href="{{ path('logout') }}" class="btn btn-danger">DÃ©connexion</a>
                {% endif %}
            </div>
        </div>
    </nav>

    {# Conteneur principal #}
    <div class="container">

        {# Flash messages Bootstrap #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Contenu des pages #}
        {% block body %}{% endblock %}
    </div>

    {# Scripts JS Bootstrap #}
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</body>
</html>
